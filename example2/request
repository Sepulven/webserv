#!/bin/bash

# Check if both arguments are provided
if [ $# -ne 2 ]; then
    echo "Usage: $0 <URL> <Number of Requests>"
    exit 1
fi

URL=$1
NUM_REQUESTS=$2

# Run the curl command the specified number of times
for ((i=1; i<=$NUM_REQUESTS; i++))
do
    curl -sS "$URL" >/dev/null &
done

echo "All requests sent."

